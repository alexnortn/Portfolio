extends layout

block content
    #logo
        img(src = "/images/logo.svg" alt = "main logo")
        p 
           | Alex Norton<br>
           | UX Design / Systems

    #hamburger
        img(src = "/images/hamburger2.svg" alt = "main nav")

    img#arrow(src = "/images/rnd.svg" alt = "down arrow")

    #pagination
        for result in projects
            .pagination&attributes({'data': result.name})

    // PROJECT ITERATOR
    each result, index in projects
        // PROJECT OVERVIEW
        .project-view&attributes({'data': index})
            .project-overview
                .description
                    p - #{result.year} -
                    h2 #{result.name}
                    p #{result.description_short}
                .hero-box
                    .overlay
                    .hero(style='background-image: url(#{result.images[0].src});')
        // /PROJECT OVERVIEW
        .project-contents
            p.main-description #{result.description_long}
            // GRID ITERATOR
            .image-grid-wrapper
                each image, index in result.images
                    .image-grid(style='background-image: url(#{result.images[index].src});')
            // /GRID ITERATOR
            .big-moment-1
                .big-moment-1-image
    // /PROJECT ITERATOR