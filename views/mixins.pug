//-  Case-Study Preview
    Requires: <data> <index> 
        + route <scr/string>
        + name-preview <string>
        + project-type <string>
        + project-name <string>
        + project-description <string>
        + project-image-preview <src>

mixin caseStudyPreview(data, index)
    .case-study.case-study-window.item.case-study-item&attributes( {'data-inproject': false}, {'data-projectIndex': index}, {'data-project': data.route},  {'id': data.preview} )
        .case-study-overview.endeavor-overview.endeavor-overview-preview
            .description
                .description-wrapper
                    h3=data.project_type
                    h2=data.name
                    hr
                    p=data.description.brief
            .hero-box
                .hero(style=`background-image: url(${data.image_hero})`)


