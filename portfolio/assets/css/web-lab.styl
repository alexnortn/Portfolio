/*

Web-Lab | Define states for elements

*/

require('type.styl') 
require('color.styl') 


.lab-options
	position: absolute
	clip: rect(0,0,0,0)


label[for="lab-options"]
	position: absolute
	display: flex
	align-items: center
	left: 50px
	bottom: 50px
	width: 300px
	height: 50px;
	

label[for="lab-options"] .interactive-element
	float: left
	

label[for="lab-options"]:hover
	cursor: pointer
		

label[for="lab-options"] p 
	font-family: Chronicle-Semitalic
	display: block


.lab-options:checked + label .lab-menu
	display: inline
	

.lab-options:checked + label .interactive-element
	background-color: $BLACK
	cursor: pointer
	

.lab-options:checked + label .interactive-element p
	color: $WHITE


#lab-what
	position: absolute
	right: 50px
	bottom: 50px
	

#lab-what p 
	font-family: Circular-Bold
	
	
.interactive-element
	position: relative
	display: flex
	align-items: center
	justify-content: center
	width: 50px
	height: 50px
	border: 1px solid black
	background-color: transparent
	border-radius: 3px
	transition: background-color ease 250ms
	

.interactive-element p 
	font-size: 12px
	color: $BLACK
	align-self: center
	text-align: center
	user-select: none    
	transition: color ease 250ms
	

.lab-menu
	display: none
	text-align: left
	float left
	width: 60%
	
	
.lab-menu ul li
	display: inline-block
	padding-left: 10px
	padding-right: 10px
	border-right: 1px solid $BLACK
	
.lab-menu ul li:last-child
	border-right: none













