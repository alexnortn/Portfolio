/*

Web-Lab | Define states for elements

*/

require('type.styl') 
require('color.styl') 


#lab-options
	position: absolute
	left: 50px
	bottom: 50px
	width: 200px
	height: 50px;
		

#lab-options p 
	font-family: Chronicle-Semitalic
	

#lab-options:hover .lab-menu
	display: inline


#lab-what
	position: absolute
	right: 50px
	bottom: 50px
	

#lab-what p 
	font-family: Circular-Bold
	
	
.interactive-element
	position: relative
	display: flex
	align-items: center
	justify-content: center
	width: 50px
	height: 50px
	border: 1px solid black
	background-color: none
	border-radius: 3px
	transition: background-color ease 250ms
	

.interactive-element p 
	font-size: 12px
	color: $BLACK
	align-self: center
	text-align: center
	transition: color ease 250ms

	
.interactive-element:hover
	background-color: $BLACK
	cursor: pointer
	

.interactive-element:hover p 
	color: $WHITE
	

.lab-menu
	display: none
	float left
	

.lab-menu ul
	display: inline
	













