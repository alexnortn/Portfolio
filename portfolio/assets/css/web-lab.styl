/*

Web-Lab | Define states for elements

*/

require('type.styl') 
require('color.styl') 


#lab-options
	position: absolute
	left: 50px
	bottom: 50px
	width: 200px
	height: 50px;
		

#lab-options p 
	font-family: Chronicle-Semitalic
	display: block

#lab-options:hover .lab-menu
	display: inline


#lab-what
	position: absolute
	right: 50px
	bottom: 50px
	

#lab-what p 
	font-family: Circular-Bold
	
#lab-options .interactive-element
	float: left
	
	
.interactive-element
	position: relative
	display: flex
	align-items: center
	justify-content: center
	width: 50px
	height: 50px
	border: 1px solid black
	background-color: transparent
	border-radius: 3px
	transition: background-color ease 250ms
	

.interactive-element p 
	font-size: 12px
	color: $BLACK
	align-self: center
	text-align: center
	transition: color ease 250ms

	
.interactive-element:hover
	background-color: $BLACK
	cursor: pointer
	

.interactive-element:hover p 
	color: $WHITE
	

.lab-menu
	display: none
	text-align: left
	float left
	width: 100%
	height: 100%
	
	
.lab-menu ul li
	display: inline-block
	padding-left: 10px
	padding-right: 10px
	border-right: 1px solid $BLACK
	
.lab-menu ul li:last-child
	border-right: none













