/*

Web-Lab | Define states for elements

*/

require('type.styl') 
require('color.styl') 


.interactive-element
	position: absolute
	clip: rect(0,0,0,0)


#lab-options
	position: absolute
	display: flex
	align-items: center
	user-select: none
	left: 50px
	bottom: 50px
	width: 400px
	height: 50px;
	

label[for="interactive-element"]
	float: left
	position: relative
	display: flex
	align-items: center
	justify-content: center
	width: 50px
	height: 50px
	border: 1px solid rgba(35 35 35 1)
	background-color: transparent
	border-radius: 3px
	transition: border ease 250ms
	

label[for="interactive-element"]:hover
	cursor: pointer
		

label[for="interactive-element"] p 
	font-family: Chronicle-Semitalic
	letter-spacing: 1px
	display: block
	font-size: 12px
	color: $BLACK
	align-self: center
	text-align: center    
	transition: color ease 250ms


.interactive-element:checked ~ .lab-menu
	// display: inline
	opacity: 1
	

.interactive-element:checked + label
	border: 1px solid rgba(35 35 35 0)
	cursor: pointer


#lab-what
	position: absolute
	right: 50px
	bottom: 50px
	

#lab-what p 
	font-family: Circular-Bold
	

.lab-menu
	display: inline
	text-align: left
	opacity: 0
	float left
	width: 60%
	transition: opacity ease 250ms
	
	
.lab-menu ul li
	font-family: Circular-Bold
	text-transform: uppercase
	letter-spacing: 3px
	color: $GREY
	display: inline-block
	padding-left: 15px
	padding-right: 15px
	border-left: 1px solid $GREY
	transition: color ease 100ms
	
.lab-menu ul li:hover
	cursor: pointer
	color: $BLACK
	
.lab-menu ul li:active
	cursor: pointer
	color: $GREY













