/*

Web-Lab | Define states for elements

*/

require('type.styl') 
require('color.styl') 

	
// --------------------------------------	
// General interactive style
.button
	position: relative
	display: flex
	align-items: center
	justify-content: center
	user-select: none 
	width: 50px
	height: 50px
	border: 1px solid rgba(35 35 35 1)
	background-color: transparent
	border-radius: 3px
	transition: border ease 250ms
	
.button:hover
	cursor: pointer
	

// --------------------------------------
// f(x) styles

#lab-options
	position: absolute
	display: flex
	align-items: center
	user-select: none
	left: 50px
	bottom: 50px
	width: 400px
	height: 50px;
	

.lab-options-element
	position: absolute
	clip: rect(0,0,0,0)
	

label[for="lab-options-element"]
	float: left
		

label[for="lab-options-element"] p 
	font-family: Chronicle-Semitalic
	letter-spacing: 1px
	display: block
	font-size: 12px
	color: $BLACK
	align-self: center
	text-align: center    
	transition: color ease 250ms


.lab-options-element:checked ~ .lab-menu
	opacity: 1
	

.lab-options-element:checked + label
	border: 1px solid rgba(35 35 35 0)
	cursor: pointer
	

.lab-menu
	display: inline
	text-align: left
	opacity: 0
	float left
	width: 60%
	transition: opacity ease 250ms
	
	
.lab-menu ul li
	font-family: Circular-Bold
	text-transform: uppercase
	letter-spacing: 3px
	color: $GREY
	display: inline-block
	padding-left: 15px
	padding-right: 15px
	border-left: 1px solid $GREY
	transition: color ease 100ms
	

.lab-menu ul li:hover
	cursor: pointer
	color: $BLACK
	
	
.lab-menu ul li:active
	cursor: pointer
	color: $GREY
	

// --------------------------------------
// ? styles

#lab-what
	position: absolute
	display: flex
	flex-direction: row
	justify-content: flex-end
	align-items: flex-end
	align-items: center
	right: 40px // Scroll Bar ~10px
	bottom: 50px
	width: 400px
	height: 50px;
	

.lab-what-element
	position: absolute
	clip: rect(0,0,0,0)
	

label[for="lab-what-element"]
	align-self: flex-end
	order: 1
		

label[for="lab-what-element"] p 
	font-family: Circular-Bold
	display: block
	font-size: 12px
	color: $BLACK
	align-self: center
	text-align: center    
	transition: color ease 250ms


.lab-what-element:checked ~ .lab-details
	opacity: 1
	

.lab-what-element:checked + label
	border: 1px solid rgba(35 35 35 0)
	cursor: pointer
	
.lab-details
	align-self: center
	order: 0
	display: inline
	text-align: right
	padding-right: 15px
	border-right: 1px solid $BLACK
	opacity: 0
	float right
	width: 60%
	transition: opacity ease 250ms
	
	
.lab-details p
	font-family: Circular-Roman
	line-height: 1.5em
	color: $BLACK
	display: inline-block
	transition: color ease 100ms
	













