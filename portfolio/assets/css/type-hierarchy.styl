/*

Typographic Hierarchy

*/

@require 'type.styl'
@require 'color.styl'

//---------------------------------------------------------------
// Native Resolution


// Basic Typographic Elements

a
	text-decoration: none
	

br 
	font-family: 'BerlingskeSans-Regular'


h1
	font-family: 'BerlingskeSans-Regular'


h2
	font-family: 'BerlingskeSans-Regular'


h3
	font-family: Circular-Bold
	font-size: 12px
	text-transform: uppercase
	letter-spacing: 3px
	text-align: left
	color: $BLACK


h4
	width: 100%
	border-bottom: 1px solid $BLACK
	padding-bottom: 10px
	margin-bottom: 25px
	font-family: Circular-Bold
	font-size: 12px
	text-transform: uppercase
	letter-spacing: 3px
	text-align: left
	color: $BLACK


h5
	font-family: 'BerlingskeSans-Regular'

	
h6
	font-family: 'BerlingskeSans-Regular'
	

li
	// font-family: 'BerlingskeSans-Regular'


ol
	// font-family: 'BerlingskeSans-Regular'
	

p
	margin: 0
	line-height: 1.75em
	
p::selection
	background: yellow

	

q
	font-family: Chronicle-Semitalic, italic
	font-size 30px
	line-height 1.5em
	display: inline-block
	margin-top: 50px
	margin-bottom: 50px

	
	
ul
	// font-family: 'BerlingskeSans-Regular'

	
	

// Elements Containing Type

body
	text-rendering: optimizeLegibility
	text-align: left
	color: $BLACK


article
	font-family: 'BerlingskeSans-Regular'

	

aside
	font-family: 'BerlingskeSans-Regular'



blockquote
	font-family: 'BerlingskeSans-Regular'

	

button
	font-family: 'BerlingskeSans-Regular'

	

details
	font-family: 'BerlingskeSans-Regular'

	

figure
	font-family: 'BerlingskeSans-Regular'

	

figcaption
	font-family: 'BerlingskeSans-Regular'

	

footer
	font-family: 'BerlingskeSans-Regular'

	

main
	font-family: 'BerlingskeSans-Regular'

	

nav
	// font-family: 'BerlingskeSans-Regular'

	

time
	font-family: 'BerlingskeSans-Regular'

	

section
	font-family: 'BerlingskeSans-Regular'

	

summary
	font-family: 'Circular-Bold'
	

// Type for each project


article h1
	font-family: 'BerlingskeSans-Regular'

	

article h2
	font-family: 'BerlingskeSans-Regular'

	

//  Interactive Simuation
//  These require targeted styling


summary p
	font-family: 'Circular-Bold'
	font-size: 18px


section details
	font-family: 'BerlingskeSans-Regular'
	

#greeting p:first-child
	margin-bottom: 1.5em


#greeting p:first-child:after
	position: absolute
	display: inline-block
	left: 0
	top: 35px
	width: 20px
	border-bottom: 3px solid
	content: "" /* 1 */	
	


/*
 *	Media Queries
 */
 


//---------------------------------------------------------------
// Breakpoint 1 | Medium Screen

@media screen and (max-width: 1000px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)
	summary p
		font-family: 'Circular-Bold'
		font-size: 14px
		
	#greeting p:first-child:after
		left: 0
		top: 25px
		width: 15px
		

		
@media screen and (max-width: 1000px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	summary p
		font-family: 'Circular-Bold'
		font-size: 14px
		
	#greeting p:first-child:after
		left: 0
		top: 25px
		width: 15px
		border-bottom: 2px solid
				
		

