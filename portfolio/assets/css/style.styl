	display: inline-block


.section-next 
	padding: 30px
	position: absolute
	right: 0
	margin-right: 2%
	text-align: right
	display: inline-block
	width: 20%


.section-next:hover 
	cursor: pointer


.section-next i 
	display: inline-block
	position: relative
	padding-left: 5px
	margin-top: 1px
	color: white


.qt-opacity 
	opacity: 0.25
