	/*text-transform: uppercase*/
	font-weight: 300
	font-size: 30px
	/*letter-spacing: 5px*/
	line-height: 1.5em


h1::selection 
	background: $GREY


p 
	font-family: 'Chronicle-Roman'
	text-rendering: optimizeLegibility


p::selection 
	background: $GREY


strong::selection 
	background: $GREY


a 
  color: #00B7FF


a::selection 
	background: $GREY


strong 
