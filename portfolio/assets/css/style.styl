	transition: all 250ms


.project-overview:hover 
	/*box-shadow: 0 10px 15px rgba(0, 0, 0, 0.18)*/
	cursor: pointer


.project-overview:hover .overlay 
	background-color: rgba(255,255,255,0.15)


.project-overview:hover .hero 
	transform:scale(1.03)


