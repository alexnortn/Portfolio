/*

Style Guide

*/



body 
	color: rgb(50,50,50)
	font-size: 12px
	height: 100%
	overflow-x: hidden
	width: 100%
	background-color: $WHITE_BG
	position: absolute
	letter-spacing: .01rem
	opacity: 0
