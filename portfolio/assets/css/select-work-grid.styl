/*

select-work-grid

*/

@require 'color.styl'
@require 'type.styl'


/* -------------------------------------- */
/* Variables */

$Margins = 100px
$F-padding = 15px

/* -------------------------------------- */
/* Elements */

#select-work 
	width: 100%
	padding-top: 25%
	padding-bottom: 25%
	

#select-work-wrapper
	max-width: 1500px
	min-width: 650px
	width: 75% 
	position: relative
	margin-left: auto
	margin-right: auto


.select-work p 
	text-align: center
	font-family: Chronicle-Roman, serif
	font-size: 18px
	line-height: 1.75em
	letter-spacing: 0
	

.select-work ul
	width: 100%
	margin-left: auto
	margin-right: auto
	margin-top: 5%
	position: relative
	display: flex
	flex-flow: row wrap
	justify-content: space-around
	

.select-work li
	width: 50px
	height: 50px
	margin: 25px

	line-height: 150px
	color: white
	font-weight: bold
	font-size: 3em
	text-align: center
	transition: all 250ms ease-in-out
	
	background-repeat: no-repeat
	background-attachment: scroll
	background-size: cover   
	background-position: center 
	

.select-work img 
	width: 0


.select-work button:hover 
	cursor: pointer
	background-color: #404040
	border-color: #404040
	

.select-work img
	clip-path: none


