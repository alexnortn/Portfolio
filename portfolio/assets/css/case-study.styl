/*

case study

*/

@require 'color.styl'
@require 'type.styl'



/* -------------------------------------- */
/* Variables */

$Margins = 100px
$F-padding = 15px

/* -------------------------------------- */
/* Elements */

.project-open
	overflow-y: hidden
	

#works
	width: 100%
	padding-top: 30%
	display: flex
	
#works-wrapper
	max-width: 1200px
	min-width: 650px
	width: 100% 
	position: relative
	margin-left: auto
	margin-right: auto
	display: flex
	flex-direction: column
	
.filler-content 
	width: 100%
	height: 100%
	
.case-study
	width: 102%
	height: 600px
	display: flex
	justify-content: center
	

.case-study-overview 
	width: 100%
	height: 50vh
	position: absolute
	left: 0
	box-shadow: 0 5px 3px rgba(0, 0, 0, 0)
	transition: all 250ms
	

.case-study-view 
	position: relative
	overflow: hidden
	transition: all 250ms ease-in-out
	
.case-study-open
	height: 100vh
	overflow-y: visible
	top: 100px


.case-study-overview:hover 
	/*box-shadow: 0 10px 15px rgba(0, 0, 0, 0.18)*/
	cursor: pointer


.case-study-overview:hover .overlay 
	background-color: rgba(255,255,255,0.15)


.case-study-overview:hover .hero 
	transform:scale(1.03)


.case-study-overview:hover .description 
	box-shadow: 0 0px 0px rgba(0, 0, 0, 0)
	border: solid 1px rgba(218, 218, 218, 0)


.case-study-page 
	width: 100%
	height: 100%
	position: relative
	display: block
	

.case-study-box 
	width: 100%
	height: 100%
	display: block
	position: relative
	z-index: -1
	display: block
	/*overflow: hidden*/
		

.case-study-contents 
	width: 75%
	position: relative
	margin-left: auto
	margin-right: auto
	margin-top: -50px
	display: none
	

.case-study-contents h1 
	text-align: center
	padding: 30px
	

.case-study-intro 
	width: 100%
	position: relative
	padding-bottom: 100px
	padding-top: 50px