/*

Animations

*/

@keyframes arrow-animate {
	0% {
		transform: none
	}
	50% {
		transform: translate(0px,15px)   
	}
	0% {
		transform: none
	}
}

@keyframes arrow-animate-mobile {
	0% {
		transform: none
	}
	50% {
		transform: translate(0px,5px)   
	}
	0% {
		transform: none
	}
}

@keyframes dip-to-white {
	0% {
		opacity 1
	}
	50% {
		opacity 0   
	}
	100% {
		transform: opacity 1
	}
}

