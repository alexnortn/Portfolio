/*

Styles for Interactive Elements

*/

@require 'color.styl'
@require 'type.styl'


// Video Elements
.video-toggle
	display inline-flex
	align-items center
	justify-content center
	
	position absolute
	z-index 1
	bottom 25px
	right 25px 
	
	text-align center
	
	border-radius 100%
	height 50px
	width 50px
	
	background-color $GRAY65
	opacity 0.5

	transition all ease 100ms
	

.video-toggle:hover
	cursor pointer
	opacity 0.75
	
.video-toggle:active
	cursor pointer
	opacity 1
	

.video-toggle .toggle-center-within
	display flex
	flex-direction column

	