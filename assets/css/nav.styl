/*

Navigation Elements

*/

@require 'color.styl'
@require 'type.styl'
@require 'animations.styl'


// Body Influence
// .nav-open
// 	overflow: hidden // No Scroll


// --------------------------------------
// Pagination

.pagination 
	width 7px
	height 7px
	position relative
	margin-left auto
	margin-right auto
	margin-bottom 25px
	border 1px solid rgba(0,0,0,0.25)
	transition all ease-in-out 100ms


.pagination-active 
	background-color $BLACK_BG


.paginationhover 
	background-color $BLACK_BG
	border 1px solid rgba(0,0,0,0)
	cursor pointer


.paginationactive 
	transformscale(1.25,1.25)
	background-color $GRAY
	border 1px solid $BLACK_BG	


#pagination 
	position fixed
	width 10px
	right 35px
	text-align center


#pagination i 
	display inline-block
	padding 10px
	position relative
	margin-top 10px


#pagination div:last-of-type 
	margin-bottom 0


// --------------------------------------
// Navigation-Burger

#nav-burger 
	right 50px
	opacity 1


#nav-button i 
	margin-top 7px	


#arrow 
	display block
	position absolute
	bottom 50px 
	text-align center
	border-radius 100%
	border solid 1px rgba(0,0,0,0)
	margin-left 50%
	padding 25px
	height 50px
	width 50px
	opacity 0.25
	animation arrow-animate 1s ease-in-out 2s infinite
	transition all 250ms


#arrow:hover 
	border solid 1px rgba(0,0,0,1)
	animation-play-state paused


#arrow:active 
	border solid 1px rgba(0,0,0,0)
	animation-play-state paused
	

// --------------------------------------
// Nav Menu

.nav 
	position fixed
	width 102%
	background-color $BLACK_BG
	top 0px
	height 100%
	min-height 600px
	opacity 0
	display flex
	flex-direction row
	visibility hidden
	
	transition all 250ms ease-in-out


#nav-overlay
	width 100%
	height 100%
	background-color $BLACK


.nav-trigger 
	position fixed
	top 0
	left 0
	clip rect(0,0,0,0)


label[for="nav-trigger"] 
	position fixed
	right 0
	top 15px
	width  75px
	height 75px
	cursor pointer
	background-size contain
	transition all 250ms ease-in-out
	


label[for="nav-trigger"]:hover
	transform scale(1.1,1.1)


label[for="nav-trigger"] hr 
	width 18px	
	height 2px
	border none
	margin-bottom 0
	opacity 1
	color $BLACK
	background-color $BLACK
	margin-top 5px
	
	transition all 250ms ease-in-out


label[for="nav-trigger"] hr:first-child 
	margin-top 28px


label[for="nav-trigger"] hr:nth-child(3) 
	margin-top -2px


.nav-trigger:checked + label hr:first-child 
	opacity 0


.nav-trigger:checked + label hr:last-child 
	opacity 0 


.nav-trigger:checked + label hr:nth-child(2) 
	transform rotate(45deg)
	background-color $BLACK


.nav-trigger:checked + label hr:nth-child(3) 
	transform rotate(-45deg)
	background-color $BLACK


.nav-trigger:checked ~ .nav 
	opacity 1
	visibility visible


.nav-trigger + label 
	transition all 250ms ease-in-out
	

// --------------------------------------
// Nav Content

.nav-content
	right 100px
	top 200px
	width 300px
	position fixed
	height 80%
	
	transition all 250ms ease-in-out
	

// Links

nav a
	color $WHITE
	text-decoration none
	border-bottom none
	transition all 100ms ease-in-out


nav li a:hover
	border-bottom 7.5px solid $WHITE
	

nav .social a // Open social links in new tabs
	target-name _new
	target-new _tab
	

// --------------------------------------
// Header
	
header
	display flex
	flex-direction row
	justify-content flex-start
	align-items center
	width: 102%
	height: 100px
	background-color $WHITE_BG
	box-shadow 0 0 100px rgba(0 0 0 0.18)
	position: fixed
	top: 0
	left: 0
	opacity 0
	transition opacity 250ms ease-in-out
	
.header-open
	opacity 1


.header
	width 102%
	height 100px
	background-color $WHITE_BG
	position fixed
	top 0
	

#logo 
	z-index 100
	float left
	position fixed
	margin-left 35px
	user-select none
	display inline-block


#logo:hover 
	cursor pointer


#logo img 
	width 45px
	position relative
	display block
	opacity 0.8


#logo p 
	display none
	margin-top 75px
	margin-left -5px
	text-align right
	line-height 1.5em
	position relative
	transform rotate(-90deg)
	

#logo-header 
	float left
	position fixed
	margin-top 25px
	margin-left 10px 
	

#logo-header:hover
	cursor pointer


#logo-header img 
	width 45px
	position relative
	display block
	margin-left 25px
	opacity 0.8
	

// --------------------------------------
// Typography

.nav ul
	list-style none
	font-family Circular-Bold, sans-serif
	font-size 60px
	letter-spacing 3px
	line-height 2em
	text-align right
	transition font-size 250ms
	

.pagination::before
	font-family Circular-Bold
	font-size 12px
	text-transform uppercase
	letter-spacing 3px
	text-align right
	position absolute
	opacity 0
	width 200px
	bottom -3px
	right 30px
	color $BLACK
	content attr(data-content)
	transition opacity 250ms
	

.pagination:hover::before
	opacity 1
	
.pagination:hover
	background-color $BLACK
	cursor pointer
	
	
.pagination-active-before::before
	opacity 1 
	

// --------------------------------------
//  Social buttons

.social 
	color $WHITE
	width 100%
	position absolute
	padding-top 25px
	border-top 1px solid $WHITE
	text-align right
	word-spacing 15px
	align-self center
	margin-top 50px


.social i
	margin-left 25px
	padding 5px
	

// --------------------------------------
// Down-Arrow

.scroll-arrow
	display inline-block
	align-self flex-end
	left 50%
	bottom 5%
	position absolute
	text-align center
	border-radius 100%
	border solid 1px rgba(0,0,0,0)
	padding 25px
	height 25px
	width 25px
	animation arrow-animate 1s ease-in-out 2s infinite
	transition transform 250ms


.scroll-arrow:hover
	border solid 1px rgba(0,0,0,1)
	animation-play-state paused
	cursor pointer


.scroll-arrow:active
	border solid 1px rgba(0,0,0,1)
	opacity 0.25
	animation-play-state paused
	

// --------------------------------------
// Next/Prev-Arrow

.arrow-container
	position fixed
	top 67.25%
	
	width 60px
	height @width
	border-radius 30px
	
	overflow hidden
	
	background-color $WHITE_BG
	box-shadow 0 0 25px rgba(0 0 0 0.1)
	
	transition all 250ms ease-in-out
	

.arrow-container p
	font-family Circular-Bold
	font-size 12px
	text-transform uppercase
	letter-spacing 3px
	
	position absolute
	width 225px
	top 20px
	
	margin-left 10px

	opacity 0
	transition ease 250ms all	
	

.arrow-container.left p
	right 15px
	text-align right
	

.arrow-container.right p
	left 15px
	text-align left
	

.arrow-container.disabled
	opacity 0.15
	pointer-events none
	

.arrow-container.left
	left 35px
	

.arrow-container.right
	right 35px
	

.arrow-container .arrow-center-within
	align-self center
	
	display flex
	flex-direction column
	

.arrow-container.left:hover
	left 30px
	

.arrow-container.right:hover
	width 225px
	right 30px
	

.arrow-container:hover
	cursor pointer
	
	
.arrow-container.right:hover p
	opacity 1
	

.arrow-center
	width 225px
	align-self center
	
	display flex
	flex-direction column
	
	top 110%
	opacity 0
	
	transition all 500ms ease-out
	

.arrow-center:hover .arrow-center-within
	animation three-sixty 1s
	

.arrow-bottom
	top calc(100% - 95px) // height:60px + margin:35px
	opacity 1
	

.arrow
	display flex
	align-items center
	justify-content center
	
	background-color WHITE_BG
	
	width 60px
	height @width
	border-radius 100%
	position absolute
	background-color none
	

.arrow.left
	left 0
	

.arrow.right
	right 0
	
	

// --------------------------------------
//  Scrollbar

::-webkit-scrollbar
	width 14px
	height 18px


::-webkit-scrollbar-thumb
	height 6px
	border 4px solid rgba(0, 0, 0, 0)
	background-clip padding-box
	border-radius 7px
	background-color rgba(0, 0, 0, 0.15)


::-webkit-scrollbar-button 
	width 0
	height 0
	display none


::-webkit-scrollbar-corner 
	background-color transparent
	

/*
 *	Media Queries
 */
 

//---------------------------------------------------------------
// Breakpoint 1 | Medium Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 1150px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)		
	.nav ul
		font-size 48px
		letter-spacing 2.5px
	
	.nav-content
		right 50px	
		
	.arrow-container.right:hover
		width 60px
		
	.arrow-container.right:hover p
		opacity 0
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 1150px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.nav ul
		font-size 48px
		letter-spacing 2.5px
	
	.nav-content
		right 50px	
		
	.arrow-container.right:hover
		width 60px
		
	.arrow-container.right:hover p
		opacity 0
 

//---------------------------------------------------------------
// Breakpoint 2 | Small Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 500px) and (max-height: 750px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)
	.nav-content
		width 200px
		top 150px
		
	
	.nav ul
		font-size 36px
		letter-spacing 2px
		

		
/* ----------- Retina Screens ----------- */
@media screen and (max-width: 500px) and (max-height: 750px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.nav-content
		width 200px
		top 150px
		
	
	.nav ul
		font-size 36px
		letter-spacing 2px
		


//---------------------------------------------------------------
// Breakpoint 3 | iPad			
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px)
	.scroll-arrow
		left 45%
		bottom 3.5%
		animation arrow-animate-mobile 1s ease-in-out 2s infinite
		transition transform 250ms
		
	.nav-content
		right 50px
		
	label[for="nav-trigger"] 
		right 25px
		

/*---------------------------------------------------------------*/
/* Breakpoint 4 | Tiny Screen */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 500px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)	
	.pagination
		display none
		
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 500px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.pagination
		display none		



//---------------------------------------------------------------
// Breakpoint 5 | Phablet // iPhone 6s
@media only screen and (max-device-width: 414px) and (min-resolution: 2dppx)
	header 
		height 75px


	.header
		height 75px
	

	#logo-header
		margin-top 22px
		

	#logo-header img 
		width 35px
		position relative
		display block
		margin-left 10px
		opacity 0.8
		

	#logo
		margin-top 22px
		

	#logo img 
		width 35px
		position relative
		display block
		margin-left 10px
		opacity 0.8
		

	.nav-content
		right 50px
		top 125px
		

	.social
		margin-top 35px
		bottom auto
		

	.social i
		margin-left 7px
		padding 5px
	

	#pagination
		visibility hidden
	

	label[for="nav-trigger"] 
		top 0
		

	.scroll-arrow
		left 40%
		bottom 3%
		animation arrow-animate-mobile 1s ease-in-out 2s infinite
		transition transform 250ms
		


//---------------------------------------------------------------
// Breakpoint 1 | Medium Screen

@media screen and (max-height: 800px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)
	.nav ul
		font-size 45px
		

		
@media screen and (max-height: 800px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.nav ul
		font-size 45px


		
/*---------------------------------------------------------------*/
/* Breakpoint 2 | Tiny Screen && Mobile */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 500px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)	
	.nav-content
		right 50px
		top 115px
	

	.nav ul
		font-size 30px
	

	.social
		margin-top 15px	


	.social i
		margin-left 5px
		padding 5px 
		
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 500px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.nav-content
		right 50px
		top 115px
	

	.nav ul
		font-size 30px
	

	.social
		margin-top 15px	


	.social i
		margin-left 5px
		padding 5px 




