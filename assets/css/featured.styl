/*

feature section

*/

@require 'color.styl'
@require 'type.styl'


/* -------------------------------------- */
/* Variables */

$Margins = 100px
$F-padding = 15px

/* -------------------------------------- */
/* Elements */

#feature 
	width: 100%
	

#feature-wrapper
	max-width: 1200px
	width: 85% 
	position: relative
	margin-left: auto
	margin-right: auto


.feature p 
	font-family 'Source Sans Pro', sans-serif
	font-weight 400
	font-size: 18px
	
	text-align: center
	line-height: 1.75em
	letter-spacing: 0
	

.feature ul
	width: 100%
	margin-left: auto
	margin-right: auto
	position: relative
	display: flex
	flex-flow: row wrap
	justify-content: space-around
	

.feature li
	width: 50px
	height: 50px
	margin: 25px

	line-height: 150px
	color: white
	opacity: 0.25
	font-weight: bold
	font-size: 3em
	text-align: center
	transition: all 100ms ease-in-out
	
	background-repeat: no-repeat
	background-attachment: scroll
	background-size: cover   
	background-position: center
	
.feature li a
	display block
	width 100%
	height 100%
	

.feature li:hover
	 opacity: 0.85
	 cursor: pointer
	 

 .feature li:active
	 opacity: 0.5
	 cursor: pointer
	

.feature img 
	width: 0


.feature button:hover 
	cursor: pointer
	background-color: #404040
	border-color: #404040
	

.feature img
	clip-path: none


/*
 *	Media Queries
 */
 

/*---------------------------------------------------------------*/
/* Breakpoint 1 | Medium Screen */

/* ----------- Non-Retina Screens ----------- */
@media screen and (min-width: 1500px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)	
	.feature li
		width: 100px
		height: @width
		
	.feature ul
		max-width: 1000px
		min-width: 850px
		

/* ----------- Retina Screens ----------- */
@media screen and (min-width: 1500px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.feature li
		width: 100px
		height: @width
		
	.feature ul
		max-width: 1000px
		min-width: 850px
 


 /*---------------------------------------------------------------*/
/* Breakpoint 2 | Medium Screen */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 1500px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)	
	.feature li
		width: 75px
		height: @width
		
	.feature ul
		max-width: 850px
		min-width: 750px
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 1500px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.feature li
		width: 75px
		height: @width
		
	.feature ul
		max-width: 850px
		min-width: 750px

 

/*---------------------------------------------------------------*/
/* Breakpoint 3 | Small Screen */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 1025px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)		
	.feature ul
		max-width: 624px
		min-width: 500px
		
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 1025px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)	
	.feature ul
		max-width: 624px
		min-width: 500px
		


/*---------------------------------------------------------------*/
/* Breakpoint 4 | Tiny Screen */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 600px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)	
	.feature ul
		max-width: 400px
		min-width: 300px
		
	.feature li
		width: 35px
		height: @width
		
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 600px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.feature ul
		max-width: 400px
		min-width: 300px
		
	.feature li
		width: 35px
		height: @width
		
		

//---------------------------------------------------------------
// Breakpoint 5 | Phablet // iPhone 6s
@media only screen and (max-device-width: 414px) and (min-resolution: 2dppx)
	#feature-wrapper
		width: 85%
		
	.feature ul
		margin-top: 25px
		
	.feature li
		width: 35px
		height: @width

		



	