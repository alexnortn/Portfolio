@require 'color.styl'
@require 'type.styl'
@require 'select-work.styl'
@require 'endeavor.styl'



/* -------------------------------------- */
/* Variables */

$Margins = 100px
$F-padding = 15px
$StickyOffsetCase = 100px

// @extend .module-font

/* -------------------------------------- */
/* Elements */	

.case-study
	width 100%
	height 85vh
	min-height 750px
	display flex
	justify-content center
	top 0
	
	transition top 250ms ease-in-out
	

.case-study-preview
	height 85vh
	

.case-study-window
	position relative
	overflow hidden
	
	transition all 250ms ease-in-out
	
.case-study-open
	height 100vh
	overflow-y visible
	
	background-color $WHITE_BG
	z-index 100
	
 .case-study-sticky
	overflow-y 	
	
.case-study-resize
	position relative // On resize?


.case-study-page 
	width 100%
	height 100%
	position relative
	display block
	

.case-study-box 
	width 100%
	height 100%
	display block
	position relative
	z-index -1
	display block
	/*overflow hidden*/
		


/* -------------------------------------- */
/* Image Box */


.image-box 
	width 50%
	padding-bottom 30%
	margin-bottom 50px
	display block
	float left
	clear both


.image-left.caption.caption--2 p 
	left 20%


.overlay-background 
	width 100%
	height 100%
	background-color white
	opacity 0.75


.overlay-background:h$GREY
	cursor url("../images/assets/xx.png"), auto
	

/*
 *	Media Queries
 */
 
 /*---------------------------------------------------------------*/
/* Breakpoint 1 | Large Screen */

/* ----------- Non-Retina Screens ----------- */
