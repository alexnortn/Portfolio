/*---------------------------------------------------------------*/
/* Breakpoint 2 | Medium Screen */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 1025px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)		
	.case-study
		height 75vh
		
	.case-study-preview
		height 75vh
		
	.description 
		margin-left auto
		margin-right auto
		position relative
		order 2
		bottom 30%
		
	p.center-caption
		width 65%
				

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 1025px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.case-study
		height 75vh
		
	.case-study-preview
		height 75vh
		
	.description 
		margin-left auto
		margin-right auto
		position relative
		order 2
		bottom 30%
		
	p.center-caption
		width 65%
		


/*---------------------------------------------------------------*/
/* Breakpoint 2 | Small Screen || iPad */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 768px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)				
	.image-box
		width 100%
		padding-bottom 70%
	
	.para-box.parallax__group blockquote
		display none
		
	.case-study
		min-height 400px
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 768px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)			
	.image-box
		width 100%
		padding-bottom 70%
		
	.para-box.parallax__group blockquote
		display none
		
	.case-study
		min-height 400px
		
		
/*---------------------------------------------------------------*/
/* Breakpoint 3 | Tiny Screen */

/* ----------- Non-Retina Screens ----------- */
@media screen and (max-width: 500px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)				
	.image-box--bottom
		margin-bottom 75px
		
	.image-grid-wrapper
		margin-top 75px
		margin-bottom 75px
		
	.para-box .caption
		display inline
		
	.video-frame
		margin 0
		
		

/* ----------- Retina Screens ----------- */
@media screen and (max-width: 500px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)					
	.image-box--bottom
		margin-bottom 75px
		
	.image-grid-wrapper
		margin-top 75px
		margin-bottom 75px
		
	.para-box .caption
		display inline
		
	.video-frame
		margin 0



