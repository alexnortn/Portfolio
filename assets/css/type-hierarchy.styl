// Breakpoint 3 | Phablet // iPhone 6s+
@media only screen and (max-device-width: 414px) and (min-resolution: 2dppx)
	section button
		font-family 'BerlingskeSans-Regular'
		
	summary p
		font-size 12px
		line-height 1.5em
		
	q 
		font-size 24px
		
	h5
		font-size 14px
		letter-spacing 2px


	
