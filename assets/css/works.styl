/*

works section

*/

@require 'color.styl'
@require 'type.styl'
@require 'select-work.styl'



/* -------------------------------------- */
/* Variables */

$Margins = 100px
$F-padding = 15px

// @extend .module-font

/* -------------------------------------- */
/* DOM Elements */

#fx-container
	display flex
	flex-direction column
	z-index 995
	transition all 500ms ease-in-out
	

.passive
	pointer-events none
	

.endeavor-open
	overflow-y hidden
	

.full
	width 100vw
	height 100vh
	

.project-full
	width 85vw
	max-width 1200px
	height 100vh
	

.fixed
	position fixed
	left 0
	top 0
	
.shadow
	box-shadow 0 0 100px rgba(0, 0, 0, 0.18)
	
	
.transparent
	opacity 0 
	

.opaque
	background-color $WHITE_BG
	// opacity 1
	

#works
	width 100%
	padding-top 15vh
	display flex
	

#works-wrapper
	width 100% 
	position relative
	margin-left auto
	margin-right auto
	display flex
	flex-direction column
	

.filler-content 
	width 100%
	height 100%
	
	
.project-transition
	width 5px
	height @width
	display block
	position absolute
	opacity 0
	

.open-transition-end
	opacity 1
	transform scale(1000)
	

#svg-container
	position relative
	width 100%
	height 100%
	

/* -------------------------------------- */
/* SVG Elements */
	

.transition-svg
	opacity 0 
	fill $WHITE_BG
	transition all 500ms ease-out
		












